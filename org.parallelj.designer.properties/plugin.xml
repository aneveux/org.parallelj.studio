<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

  <!-- EEF extensions -->
  <extension
         point="org.eclipse.emf.eef.runtime.PropertiesEditionProvider">
      <PropertiesEditionComponentProvider
            providerClass="org.parallelj.providers.ParalleljPackagePropertiesEditionProvider">
      </PropertiesEditionComponentProvider>
   </extension>
   <extension
         point="org.eclipse.emf.eef.runtime.PropertiesEditionPolicyProvider">
      <PropertiesEditionPolicyProvider
            providerClass="org.parallelj.providers.ParalleljPackagePropertiesEditionPolicyProvider">
      </PropertiesEditionPolicyProvider>
   </extension>
   <extension
         point="org.eclipse.emf.eef.runtime.PropertiesEditionPartProvider">
      <PropertiesEditionPartProvider
            providerClass="org.parallelj.designer.properties.providers.ParalleljPropertiesEditionPartProvider">
      </PropertiesEditionPartProvider>
   </extension>

  <!-- Tabbed properties views extension -->
		
	<extension point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
		<propertyContributor contributorId="org.parallelj.properties" labelProvider="org.parallelj.designer.properties.tools.ParallelJLabelProvider">
			<propertyCategory
				category="default">
			</propertyCategory>
			<propertyCategory
				category="extended">
			</propertyCategory>
			<propertyCategory
				category="advanced">
			</propertyCategory>
		</propertyContributor>
	</extension>

	<extension point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
		<propertyTabs contributorId="org.parallelj.properties">
			<propertyTab
				label="General"
				category="default"
				id="Base">
			</propertyTab>
   <propertyTab
         afterTab="Base"
         category="default"
         id="Colors"
         label="Colors">
   </propertyTab>
		</propertyTabs>
	</extension>
	<extension point="org.eclipse.ui.views.properties.tabbed.propertySections">
		<propertySections contributorId="org.parallelj.properties">
			<propertySection
         class="org.parallelj.properties.ProgramBasePropertySection"
         filter="org.parallelj.properties.ProgramBasePropertySection"
         id="org.parallelj.section.ProgramBasePropertySection"
         tab="Base">
			</propertySection>
			<propertySection
				class="org.parallelj.properties.InputConditionBasePropertySection"
				filter="org.parallelj.properties.InputConditionBasePropertySection"
				id="org.parallelj.section.InputConditionBasePropertySection"
				tab="Base">
			</propertySection>
			<propertySection
				class="org.parallelj.properties.OutputConditionBasePropertySection"
				filter="org.parallelj.properties.OutputConditionBasePropertySection"
				id="org.parallelj.section.OutputConditionBasePropertySection"
				tab="Base">
			</propertySection>
			<propertySection
				class="org.parallelj.properties.PredicateBasePropertySection"
				filter="org.parallelj.properties.PredicateBasePropertySection"
				id="org.parallelj.section.PredicateBasePropertySection"
				tab="Base">
			</propertySection>
			<propertySection
				class="org.parallelj.properties.ConditionBasePropertySection"
				filter="org.parallelj.properties.ConditionBasePropertySection"
				id="org.parallelj.section.ConditionBasePropertySection"
				tab="Base">
			</propertySection>
			<propertySection
				class="org.parallelj.properties.LinkBasePropertySection"
				filter="org.parallelj.properties.LinkBasePropertySection"
				id="org.parallelj.section.LinkBasePropertySection"
				tab="Base">
			</propertySection>
			<propertySection
				class="org.parallelj.properties.ProcedureBasePropertySection"
				filter="org.parallelj.properties.ProcedureBasePropertySection"
				id="org.parallelj.section.ProcedureBasePropertySection"
				tab="Base">
			</propertySection>
			<propertySection
				class="org.parallelj.properties.ForEachLoopBasePropertySection"
				filter="org.parallelj.properties.ForEachLoopBasePropertySection"
				id="org.parallelj.section.ForEachLoopBasePropertySection"
				tab="Base">
			</propertySection>
			<propertySection
				class="org.parallelj.properties.WhileLoopBasePropertySection"
				filter="org.parallelj.properties.WhileLoopBasePropertySection"
				id="org.parallelj.section.WhileLoopBasePropertySection"
				tab="Base">
			</propertySection>
			<propertySection
				class="org.parallelj.properties.DataBasePropertySection"
				filter="org.parallelj.properties.DataBasePropertySection"
				id="org.parallelj.section.DataBasePropertySection"
				tab="Base">
			</propertySection>
			<propertySection
				class="org.parallelj.properties.HandlerBasePropertySection"
				filter="org.parallelj.properties.HandlerBasePropertySection"
				id="org.parallelj.section.HandlerBasePropertySection"
				tab="Base">
			</propertySection>
			<propertySection
				class="org.parallelj.properties.PipelineBasePropertySection"
				filter="org.parallelj.properties.PipelineBasePropertySection"
				id="org.parallelj.section.PipelineBasePropertySection"
				tab="Base">
			</propertySection>
  			<propertySection
           afterSection="org.parallelj.section.ProgramBasePropertySection"
           class="org.parallelj.properties.ColorPropertySection"
           filter="org.parallelj.properties.ColorPropertySection"
           id="org.parallelj.designer.properties.propertyColorSection"
           tab="Colors">
		   </propertySection>			
		</propertySections>
	</extension>

</plugin>
